{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run MATLAB Script",
            "type": "shell",
            "command": "matlab",
            "args": [
                "-batch",
                "run('${fileBasename}')"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
